{%- style -%}
  .advantage-list {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .advantage-list__container {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .advantage-list__heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    color: {{ section.settings.heading_color }};
    font-weight: 700;
  }

  .advantage-list__items {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: {{ section.settings.column_gap }}px {{ section.settings.row_gap }}px;
  }

  .advantage-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .advantage-item__icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    color: {{ section.settings.icon_color }};
  }

  .advantage-item__text {
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .advantage-list__items {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<div class="advantage-list">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="advantage-list__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="advantage-list__items">
      {%- for block in section.blocks -%}
        <div class="advantage-item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="advantage-item__icon">
              {{ block.settings.icon }}
            </div>
          {%- endif -%}
          <p class="advantage-item__text">{{ block.settings.text }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

