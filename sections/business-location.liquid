{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="business-location-section section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="business-location-wrapper page-width" style="display: flex; flex-wrap: wrap; gap: 2rem;">
    <div class="location-text" style="flex: 1 1 300px;">
      <h2 style="margin-bottom: 2.4rem; font-weight: 600;">{{ section.settings.heading }}</h2>
      <p style="margin-bottom: 1.6rem">{{ section.settings.address_text | newline_to_br }}</p>
      <div class="location__links">
      {{ section.settings.links_text }}
      </div>
    </div>
    <div class="location-map" style="flex: 1 1 300px;">
      <iframe
        src="{{ section.settings.map_iframe_url }}"
        width="100%"
        height="300"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Business Location",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Visit Our Store"
    },
    {
      "type": "textarea",
      "id": "address_text",
      "label": "Business Address",
      "default": "123 Main Street\nKyiv, Ukraine 01001\nMon - Fri: 9AM - 6PM"
    },
    {
        "type": "richtext",
        "id": "links_text",
        "label": "Links",
        "default": "<p><b>+1 (929) 327-6636</b></p>"
    },
    {
      "type": "text",
      "id": "map_iframe_url",
      "label": "Google Maps Embed URL",
      "default": "https://www.google.com/maps/embed"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
  ],
  "presets": [
    {
      "name": "Business Location",
      "category": "Contact"
    }
  ]
}
{% endschema %}
