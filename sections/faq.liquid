{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'section-faq.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
{%- endstyle -%}
{% assign faq_block = product.metafields.custom.faq.value %}
{% assign faq_items = faq_block.faq_list.value %}

{% if product.metafields.custom.faq.value %}
  <section class="faq section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
    <div class="page-width">
      {%- if section.settings.title != blank -%}
        <div class="title-wrapper title-wrapper--no-top-margin page-width title-wrapper--self-padded-tablet-down">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        </div>
      {%- endif -%}
      <div class="faq-with-image grid grid--1-col grid--2-col-tablet">
        <div class="faq-list grid__item">
          {% for item in faq_items %}
            <details class="faq-item accordion">
              <summary class="faq-question summary__title">
                {{ item.header | escape }}
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </summary>
              <div class="faq-answer accordion__content">
                {{ item.description | metafield_tag }}
              </div>
            </details>
          {% endfor %}
          {%- if section.settings.button_label != blank -%}
            <a
              {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link }}"
              {% endif %}
              class="button button--{{ section.settings.button_style }}"
            >
              {{ section.settings.button_label | escape }}
            </a>
          {%- endif -%}
        </div>
        <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }}  grid__item">
          <div
            class="image-with-text__media image-with-text__media--{{ section.settings.image_height }} gradient color-{{ section.settings.color_scheme }} global-media-settings{% if section.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
            {% if section.settings.image_height == 'adapt' and section.settings.image != blank %}
              style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
            {% endif %}
          >
            {%- if section.settings.image != blank -%}
              {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
              {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
              {{ section.settings.image | image_url: width: 1500 | image_tag: sizes: sizes, widths: widths }}
            {%- else -%}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "t:sections.faq.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.faq.settings.title.default",
      "label": "t:sections.faq.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.faq.settings.image.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.faq.settings.image_height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.faq.settings.image_height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.faq.settings.image_height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.faq.settings.image_height.options__4.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.faq.settings.image_height.label"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "small",
          "label": "t:sections.faq.settings.desktop_image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.faq.settings.desktop_image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.faq.settings.desktop_image_width.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.faq.settings.desktop_image_width.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "t:sections.faq.settings.button_label.default",
      "label": "t:sections.faq.settings.button_label.label",
      "info": "t:sections.faq.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.faq.settings.button_link.label"
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.faq.settings.button_style.options__1.label"
        },
        {
          "value": "secondary",
          "label": "t:sections.faq.settings.button_style.options__2.label"
        }
      ],
      "default": "secondary",
      "label": "t:sections.faq.settings.button_style.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}