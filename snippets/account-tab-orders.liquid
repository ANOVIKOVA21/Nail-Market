<script>
  function filterOrders(type, btn) {
    const now = new Date();
    const year = now.getFullYear().toString();
    const month = (now.getMonth() + 1).toString().padStart(2, '0');
    const monthStr = year + '-' + month;
    document.querySelectorAll('.orders-filter__btn').forEach((b) => b.classList.remove('active'));
    btn.classList.add('active');
    document.querySelectorAll('.order-accordion').forEach(function (order) {
      let show = false;
      if (type === 'all') show = true;
      else if (type === 'month') show = order.getAttribute('data-order-month') === monthStr;
      else if (type === 'year') show = order.getAttribute('data-order-year') === year;
      order.style.display = show ? '' : 'none';
    });
  }
</script>
