    {% paginate customer.orders by 20 %}
      {%- if customer.orders.size > 0 -%}
        <ul class="orders-list">
          {%- for order in customer.orders -%}
            {%- assign order_date = order.created_at | date: '%Y-%m-%d' -%}
            {%- assign order_year = order.created_at | date: '%Y' -%}
            {%- assign order_month = order.created_at | date: '%Y-%m' -%}
            <li
              class="order-accordion"
              data-order-date="{{ order_date }}"
              data-order-year="{{ order_year }}"
              data-order-month="{{ order_month }}"
              data-order-id="{{ order.id }}"
            >
              <details>
                <summary class="order-accordion__toggle">
                  <h2 class="order-accordion__title">
                    {{ 'customer.orders.order_number' | t }}
                    <strong>{{ order.name }}</strong> from
                    {{ order.created_at | date: '%d.%m.%Y' }}
                  </h2>
                  <span class="order-status">
                    {{ order.fulfillment_status }}
                    {%- if order.cancelled_at -%}
                      {{ 'customer.orders.status.cancelled' | t }}
                    {%- elsif order.fulfillment_status == 'fulfilled' -%}
                      {{ 'customer.orders.status.fulfillment' | t }}
                    {%- else -%}
                      {{ 'customer.orders.status.in_progress' | t }}
                    {%- endif -%}
                  </span>
                  <span class="svg-wrapper">
                    {{- 'icon-caret.svg' | inline_asset_content -}}
                  </span>
                </summary>
                <div class="order-accordion__details">
                  <div class="order-tracking">
                    {{ 'customer.orders.track_number' | t }}
                    <div>
                      {%- if order.fulfillments.size > 0 and order.fulfillments[0].tracking_number -%}
                        {{ order.fulfillments[0].tracking_number }}
                      {%- else -%}
                        <span>No tracking number</span>
                      {%- endif -%}
                      <span class="svg-wrapper">
                        {{- 'icon-copy.svg' | inline_asset_content -}}
                      </span>
                    </div>
                  </div>

                  <ul class="order-items">
                    {%- for line_item in order.line_items -%}
                      {% assign li_refunded_quantity = 0 %}
                      <li class="order-item" data-line-item-id="{{ line_item.id }}"
                        data-line-item-url="{{ line_item.url }}" 
                        data-line-item-image="{{ line_item.image | image_url: width: 100, height: 100, crop: 'center'  }}"
                        data-line-item-quantity="{{ line_item.quantity }}"
                        data-line-item-unit-price="{{ line_item.final_price }}"
                        data-line-item-final-price="{{ line_item.final_line_price | money_with_currency }}"
                        data-line-item-refunded-quantity="{% for line in order.subtotal_line_items %}{% if line_item.id == line.id %}{% assign li_refunded_quantity = line.refunded_quantity | default:0 %}{{ line.refunded_quantity | default:0 }}{% endif %}{% endfor %}"
                        >
                        <a href="{{ line_item.url }}" class="order-item__link">
                          {%- if line_item.image -%}
                            <img
                              src="{{ line_item.image | image_url: width: 100, height: 100, crop: 'center'  }}"
                              alt="{{ line_item.title }}"
                              class="order-item__img"
                              width="48"
                              height="48"
                            >
                          {%- endif -%}
                          <p class="order-item__title">{{ line_item.title | escape }}</p>
                        </a>
                        <p class="order-item__price">
                          {% assign refunded_money_int = line_item.final_price | times: li_refunded_quantity %}
                        {{ line_item.quantity }}{% if li_refunded_quantity != 0 %}({{ li_refunded_quantity }} refunded){%endif%} x
                          <strong>{{ line_item.final_line_price | minus: refunded_money_int | money_with_currency }}</strong>
                        </p>
                      </li>
